[include]
path = ~/dotfiles/tools/git/config.local

[init]
defaultBranch = main

[core]
excludesfile = ~/dotfiles/tools/git/ignore

[push]
default = current

[fetch]
prune = true

[branch]
autosetuprebase = always

[credential]
helper = "cache --timeout=3600"

[alias]
stats = "status -s ."
files = "ls-files ."
goto = "checkout"
amend = "commit --amend --no-edit"
branches = "!$DOTFILES/tools/git/scripts/git-branches.sh"
aliases = "config --get-regexp alias"
